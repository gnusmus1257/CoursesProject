@model coursesProject.Models.UserViewModel
@{
    ViewData["Title"] = "PassportScan";
}

<h2>Passport Scan</h2>

<form asp-action="PassportScan" enctype="multipart/form-data">
    <div class="form-horizontal">
        
        <hr />
        
 
        <div class="form-group">
            <label class="col-md-2 control-label"> Pasport scan</label>
            <div class="col-md-10">
                <input name="PasportScan" type="file" class="form-control" />
                <span asp-validation-for="PasportScan" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label"> Personal Info</label>
            <div class="col-md-10">
                <input type="text" name="PersonalInfo" class="form-control" />
                <span asp-validation-for="PersonalInfo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label"> Comment</label>
            <div class="col-md-10">
                <input type="text" name="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>

        </div>
   
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <text class="text-danger">@ViewBag.eror</text>
            </div>
        </div>
</form>